var content = fn(c, r) {
    var ret = [c]
    if (is(r, "ARRAY")) {
        if (!empty(r)) {
            each(r, fn(e, i) {
                set(ret, 0, replace(ret[0], e[0], e[1]))
            })
            return ret[0]
        }
    }
    return ret[0]
}

var content_list = fn(a, p) {
    var ret = []
    if (is(a, "HASH")) {
        ret + "<ul>"
        each(keys(a), fn(e, i) {
            var v = a[e]
            var n = "<li>
                <a href='" + 
                    p + "?id=" + e + "'>" + 
                    v[0] + 
                "</a>
            </li>"
            ret + n
        })
        ret + "</ul>"
    }
    return join(newline(), ret)
}

var content_title = fn(t) {
    var t = trim(string(t))
    if (!empty(t)) {
        return "<h1>" + t + "</h1>"
    }
    return ""
}

