var menu = fn(p, c, sess) {
    var ret = []
    var resource_user = []
    each(resource, fn(e, i) {
        if (e[3] == null) {
            resource_user + e
        } else {
            if (empty(sess)) {
                if (e[3] == false) {
                    resource_user + e
                }
            } else {
                if (e[3] == true) {
                    resource_user + e
                }
            }
        }
    })
    each(resource_user, fn(e, i) {
        var x = ""
        if (e[1] == p | e[0] == c) {
            var x = " style='font-weight: bold;'"
        }
        var m = " 
        <span" + x + ">
            <a href='" + e[1] + "'>" + e[2] + "</a>
        </span>"
        ret + m
    })
    return join(newline(), ret)
}

